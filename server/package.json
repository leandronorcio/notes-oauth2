{
  "name": "notes-oauth2",
  "version": "1.0.0",
  "description": "A simple notes app with OAuth 2.0 authentication.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "predev": "npm run build",
    "dev": "concurrently \"npx tsc -w\" \"nodemon --env-file=config.env dist/index.js\"",
    "serve": "node --env-file=production.env dist/index.js",
    "prestart": "npm run build",
    "start": "npm run serve",
    "prepm2": "npm run build",
    "pm2": "pm2 start npm --name 'notes-api' -- run serve"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/express-session": "^1.17.7",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.6.2",
    "@types/pg": "^8.10.3",
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  }
}
